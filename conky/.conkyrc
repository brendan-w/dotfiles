# http://crunchbanglinux.org/forums/topic/2047/conky-help/
#
# Enjoy! :)
##############################################
#  Settings
##############################################
 background yes
    use_xft yes
    xftfont HandelGotD:size=8
    xftalpha 0.5
    update_interval 0.5
    total_run_times 0
    own_window yes
    own_window_type override
    own_window_transparent yes
    own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
    double_buffer yes
    minimum_size 200 5
    maximum_width 220
    draw_shades no
    draw_outline no
    draw_borders no
    draw_graph_borders yes
    default_color white
    default_shade_color red
    default_outline_color green
    alignment top_right
    gap_x 5
    gap_y 5
    no_buffers yes
    uppercase no
    cpu_avg_samples 2
    override_utf8_locale no
 
TEXT

${alignc 40}${font sans-serif:normal:size=26}${time %I:%M }${font sans-serif:normal:size=12}${time %P}
${alignc}${time %a %d %b %Y}
${font sans-serif:normal:size=8}
Uptime: ${alignr} ${uptime}
Ethernet IP: ${alignr} ${addr enp0s25}
Wireless IP: ${alignr} ${addr wlp3s0}
Wireless SSID: ${alignr} ${wireless_essid wlp3s0}

${font sans-serif:bold:size=8}CPU
${cpu cpu1}% ${cpubar cpu1}
${cpu cpu2}% ${cpubar cpu2}
${cpu cpu3}% ${cpubar cpu3}
${cpu cpu4}% ${cpubar cpu4}

${font sans-serif:bold:size=8}RAM ${font sans-serif:normal:size=8} ${alignr} $mem / $memmax
$memperc% $membar

${font sans-serif:bold:size=8}DISK ${font sans-serif:normal:size=8} ${alignr} ${fs_used} / ${fs_size}
${fs_used_perc}% ${fs_bar}
 
${font sans-serif:bold:size=8}SWAP ${font sans-serif:normal:size=8} ${alignr} ${swap} / ${swapmax}
${swapperc}% ${swapbar}

${font sans-serif:bold:size=8}PROC ${alignr} PID  -  CPU  ${font sans-serif:normal:size=8}
${hr 2}
${top_mem name 1} ${alignr} ${top_mem pid 1}  -${top_mem mem 1}%
${top_mem name 2} ${alignr} ${top_mem pid 2}  -${top_mem mem 2}%
${top_mem name 3} ${alignr} ${top_mem pid 3}  -${top_mem mem 3}%
${top_mem name 4} ${alignr} ${top_mem pid 4}  -${top_mem mem 4}%
${top_mem name 5} ${alignr} ${top_mem pid 5}  -${top_mem mem 5}%
${top_mem name 6} ${alignr} ${top_mem pid 6}  -${top_mem mem 6}%
${top_mem name 7} ${alignr} ${top_mem pid 7}  -${top_mem mem 7}%
${top_mem name 8} ${alignr} ${top_mem pid 8}  -${top_mem mem 8}%
