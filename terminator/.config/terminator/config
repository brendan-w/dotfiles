[keybindings]
    # stop stealing my F keys
    full_screen = <Ctrl><Shift>F11
    zoom_in = <Ctrl>plus
    zoom_out = <Ctrl>minus
    zoom_normal = <Ctrl>0
    copy = <Ctrl><Shift>C
    paste = <Ctrl><Shift>V
    search = <Ctrl><Shift>F

    # I don't care about the rest of these features, and would prefer the terminal
